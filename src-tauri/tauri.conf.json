{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "eternity-ai",
  "version": "0.1.0",
  "identifier": "com.eternity-ai.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "EternityAi",
        "width": 1000,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "shadow": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "scope": {
          "allow": [
            "$APPDATA/**",
            "$RESOURCE/**"
          ]
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["bin/backend"],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "headerImage": "icons/Square150x150Logo.png",
        "sidebarImage": "icons/Square310x310Logo.png",
        "installMode": "currentUser"
      }
    }
  }
}
